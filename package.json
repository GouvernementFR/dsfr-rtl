{
  "name": "dsfr-rtl",
  "version": "1.0.0",
  "description": "DSFR Right To Left (RTL) est une extension au Système de Design de l'État. Il fournit l'ensemble des styles pour adapter le DSFR pour des langues qui s'écrivent de droite à gauche.",
  "scripts": {
    "sass-compil": "sass src/dsfr-rtl.scss dist/dsfr-rtl.css",
    "minify": "postcss dist/dsfr-rtl.css -o dist/dsfr-rtl.min.css -u cssnano",
    "lint": "stylelint src/**/*.scss",
    "watch": "sass --watch src/dsfr-rtl.scss dist/dsfr-rtl.css",
    "build": "yarn lint && yarn sass-compil && yarn minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GouvernementFR/dsfr-rtl.git"
  },
  "keywords": [
    "css",
    "rtl",
    "dsfr"
  ],
  "author": "Service d'Information du Gouvernement <maxime.beaugrand@pm.gouv.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GouvernementFR/dsfr-rtl/issues"
  },
  "homepage": "https://github.com/GouvernementFR/dsfr-rtl#readme",
  "devDependencies": {
    "cssnano": "^7.0.6",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "sass": "^1.81.0",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0"
  }
}
